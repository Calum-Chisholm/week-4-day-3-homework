<form class="" action="/students" method="post">


<label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <% @houses.each do |house| %>
      <option value="<%= house.id %>"><%= house.name %></option>
    <% end %>
  </select>

 <label for="first_name">First Name:</label>
   <input type="text" name="first_name" value="" />
 <label  for="last_name">Last Name:</label>
   <input type="text" name="last_name" value="" />
 <label for="age">Age:</label>
   <input name="age" type="number" min="16" max="50" value="16" />
   <input type="submit" name="" value="Submit Application" />

</form>
